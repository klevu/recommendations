<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="klevu_img" type="host">*.klevu.com</value>
                <value id="ksearch_img" type="host">*.ksearchnet.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="klevu_script" type="host">*.klevu.com</value>
                <value id="ksearch_script" type="host">*.ksearchnet.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="klevu_connect" type="host">*.klevu.com</value>
                <value id="ksearch_connect" type="host">*.ksearchnet.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
