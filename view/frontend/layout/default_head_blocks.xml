<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="klevu_frontendjs.js_includes">
            <arguments>
                <argument name="js_includes" xsi:type="array">
                    <item name="klevu_recs_lib" xsi:type="array">
                        <item name="if_config" xsi:type="string">klevu_search/recommendations/enabled</item>
                        <item name="after" xsi:type="string">lib</item>
                        <item name="url" xsi:type="string"><![CDATA[//js.klevu.com/recs/v2/klevu-recs.js]]></item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="klevu_frontendjs.js_init.additional.before">
            <block class="Magento\Framework\View\Element\Template"
                   after="-"
                   name="klevu_js_additional"
                   template="Klevu_Recommendations::html/head/js_additional.phtml"
                   ifconfig="klevu_search/recommendations/enabled"/>
        </referenceBlock>
    </body>
</page>
